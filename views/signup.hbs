<section>
	<div class="container">
		<div class="row">
      <div class="col-md-10 col-lg-8 col-xl-6 mx-auto">
        <div class="bg-primary bg-opacity-10 rounded p-4 p-sm-5">
					<h2>Create your free account </h2>
					<!-- Form START -->
					<form action="/auth/signup" method = "POST" class="mt-4">
						
						<div class="mb-3">
							<label class="form-label" for="exampleInputUsername1">Username</label>
							<input type="text" class="form-control" id="exampleInputUsername1" aria-describedby="emailHelp" name = "username" placeholder="Username">
							<small id="emailHelp" class="form-text">Please do not use your real name.</small>
						</div>
						<!-- Password -->
						<div class="mb-3">
							<label class="form-label" for="exampleInputPassword1">Password</label>
							<input type="password" class="form-control" id="exampleInputPassword1" placeholder="*********" name = "password">
						</div>
						<!-- Password -->
					
						
						<!-- Button -->
						<div class="row align-items-center">
							<div class="col-sm-4">
								<button type="submit" class="btn btn-success">Sign me up</button>
							</div>
							
						</div>
					</div>
                    </div>
                    </div>
                    </div>
                    </form>
					<!-- Form END -->



